<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <PackageId>DigitalRise.Particles.MonoGame</PackageId>
    <AssemblyName>DigitalRise.Particles</AssemblyName>
    <RootNamespace>DigitalRise.Particles</RootNamespace>
    <Description>DigitalRise.Particles for MonoGame</Description>
    <DefineConstants>$(DefineConstants);MonoGame</DefineConstants>
    <OutputPath>bin\MonoGame\$(Configuration)</OutputPath>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\DigitalRise.Geometry\DigitalRise.Geometry.MonoGame.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.DesktopGL" PrivateAssets="All" Version="$(MonoGameVersion)" />
  </ItemGroup>  
</Project>