<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <PackageId>DigitalRune.Graphics.MonoGame.DirectX</PackageId>
    <AssemblyName>DigitalRune.Graphics</AssemblyName>
    <RootNamespace>DigitalRune.Graphics</RootNamespace>
    <Description>DigitalRune.Graphics for MonoGame.DirectX</Description>
    <DefineConstants>$(DefineConstants);MONOGAME;DIRECTX</DefineConstants>
    <OutputPath>bin\MonoGame.DirectX\$(Configuration)</OutputPath>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\**\*.*" />
    <EmbeddedResource Include="EffectsSource\MonoGameDX11\bin\**\*.*" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\ThirdParty\glTFLoader\**\*.cs" LinkBase="glTFLoader" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FontStashSharp.MonoGame" Version="1.2.8" />
    <PackageReference Include="MonoGame.Framework.WindowsDX" Version="3.8.1.303" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="XNAssets.MonoGame" Version="0.6.6" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\DigitalRune.Animation\DigitalRune.Animation.MonoGame.csproj" />
    <ProjectReference Include="..\DigitalRune.Geometry\DigitalRune.Geometry.MonoGame.csproj" />
    <ProjectReference Include="..\DigitalRune.Particles\DigitalRune.Particles.MonoGame.csproj" />
  </ItemGroup>
</Project>