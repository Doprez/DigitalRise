<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>DigitalRune.Graphics.FNA</PackageId>
    <AssemblyName>DigitalRune.Graphics</AssemblyName>
    <RootNamespace>DigitalRune.Graphics</RootNamespace>
    <Description>DigitalRune.Graphics for FNA.Core</Description>
    <DefineConstants>$(DefineConstants);FNA</DefineConstants>
    <OutputPath>bin\FNA.Core\$(Configuration)</OutputPath>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\**\*.*" />
    <EmbeddedResource Include="EffectsSource\FNA\**\*.*" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\ThirdParty\glTFLoader\**\*.cs" LinkBase="glTFLoader" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\..\..\FontStashSharp\src\XNA\FontStashSharp.FNA.Core.csproj" />
    <ProjectReference Include="..\..\..\XNAssets\src\XNAssets.FNA.Core.csproj" />
    <ProjectReference Include="..\DigitalRune.Animation\DigitalRune.Animation.FNA.Core.csproj" />
    <ProjectReference Include="..\DigitalRune.Geometry\DigitalRune.Geometry.FNA.Core.csproj" />
    <ProjectReference Include="..\DigitalRune.Particles\DigitalRune.Particles.FNA.Core.csproj" />
  </ItemGroup>
</Project>